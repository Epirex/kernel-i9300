#!/res/busybox sh

export PATH=/res/asset:$PATH

XML=$CONFIG_XML

if [ ! -f /data/.arter97/zram ]; then
  echo "0" > /data/.arter97/zram
fi

if [ ! -f /data/.arter97/zram_disksize ]; then
  echo "100" > /data/.arter97/zram_disksize
fi

if [ ! -f /data/.arter97/sdcardfs ]; then
  echo "1" > /data/.arter97/sdcardfs
fi

echo "" > $XML

echo '
<settingsRoot>' >> $XML

echo '
  <settingsTab name="CPU">

    <settingsPane description=""
		name="CPU Idle and Power Settings">
      <spinner description="Sets the CPU Idle Mode. Idle + LPA is recommended." name="CPU Idle Mode" action="generic /sys/module/cpuidle_exynos4/parameters/enable_mask">
             <spinnerItem name="Idle + LPA (default)" value="2"/>
             <spinnerItem name="AFTR + LPA" value="3"/>
             <spinnerItem name="AFTR only" value="1"/>
             <spinnerItem name="Idle only" value="0"/>
      </spinner>
      <seekBar description="Sets the CPU scheduler behaviour for multi-core systems. 0 is default value which turns sched_mc off. Setting it to 1 means that the first core will be tried to be loaded more and setting it to 2 will bias task wake-ups to semi-idle CPU package for power savings. (recommended: 0)"
            name="sched_mc" action="generic /sys/devices/system/cpu/sched_mc_power_savings" unit="" min="0" reversed="false" step="1" max="2"/>
     </settingsPane>

    <settingsPane description="interactive is default and recommended for low-latency performance and battery-life. pegasusq is the stock default. pegasusqplus is improved version of pegasusq by AndreiLux of the Perseus kernel. If you want to have a better experience for battery, change it to yankasusq or zzmoove."
                  name="Active governor">' >> $XML
echo "
      <spinner description=\"Set active governor.\"
               name=\"Current governor\"
               action=\"genericyank /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor\">" >> $XML

for GOVERNOR in `cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_available_governors`; do
  echo "<spinnerItem name=\"$GOVERNOR\" value=\"$GOVERNOR\"/>" >> $XML
done

echo '
      </spinner>
    </settingsPane>

    <settingsPane description=""
                  name="CPU frequency scaling">' >> $XML

echo "
      <spinner description=\"Set the maximum frequency the CPU scales up to.\"
               name=\"CPU max frequency\"
               action=\"cpugenericyank /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq\">" >> $XML

echo '
      <spinnerItem name="1800 MHz" value="1800000"/>
      <spinnerItem name="1704 MHz" value="1704000"/>
      <spinnerItem name="1600 MHz" value="1600000"/>
      <spinnerItem name="1400 MHz" value="1400000"/>
      <spinnerItem name="1200 MHz" value="1200000"/>
      <spinnerItem name="1000 MHz" value="1000000"/>' >> $XML

echo "
      </spinner>
      <spinner description=\"Set the minimum frequency the CPU scales down to.\"
               name=\"CPU min frequency\"
               action=\"cpugeneric /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq\">" >> $XML

echo '
      <spinnerItem name="800 MHz" value="800000"/>
      <spinnerItem name="700 MHz" value="700000"/>
      <spinnerItem name="600 MHz" value="600000"/>
      <spinnerItem name="500 MHz" value="500000"/>
      <spinnerItem name="400 MHz" value="400000"/>
      <spinnerItem name="300 MHz" value="300000"/>
      <spinnerItem name="200 MHz" value="200000"/>
      <spinnerItem name="100 MHz" value="100000"/>' >> $XML

echo '
      </spinner>
    </settingsPane>

    <settingsPane description="Intelli-plug by faux123. This enables hotplugging for non-hotplug-implemented governors. Intelli-plug is automatically disabled when lulzactiveq, pegasusq, pegasusqplus, performance, powersave, userspace, yankasusq or zzmoove governor is selected."
                  name="Intelli-plug">' >> $XML

echo "
      <spinner description=\"Set the hotplugging profile for Intelli-plug.\"
               name=\"Hotplugging profile\"
               action=\"generic /sys/module/intelli_plug/parameters/nr_run_profile_sel\">" >> $XML

echo '
      <spinnerItem name="Balance" value="0"/>
      <spinnerItem name="Performance" value="1"/>
      <spinnerItem name="Conservative" value="2"/>
      <spinnerItem name="Eco" value="3"/>
      <spinnerItem name="Eco Extreme" value="4"/>
      <spinnerItem name="Disable" value="5"/>' >> $XML

echo "
      </spinner>
      <checkbox description=\"Enabling this option puts 2-cores online when screen is touched.\"
               name=\"Touch boost\"
               action=\"generic01 /sys/module/intelli_plug/parameters/touch_boost_active\"
               label=\"Enable touch boost\"/>" >> $XML

echo '
    </settingsPane>

  </settingsTab>

  <settingsTab name="Undervolt">

    <settingsPane description="Decreasing voltage may lower power consumption of the CPU at the cost of overall instability. Increasing it on overclocked frequencies may improve stability. Too lowered voltages may cause instabilities and freezes. Use at your own risk!" 
                  name="CPU voltage control">' >> $XML

cat /sys/devices/system/cpu/cpu0/cpufreq/UV_uV_table | sed -e 's/mhz//g;s/://g' | awk '{ print $1, $2 }' | while read FREQ UVOLT; do
echo '      <seekBar  description="Default voltage: '$UVOLT'µV"
	        name="'${FREQ}' MHz step" 
                action="cpuvolt '${FREQ}'"
                unit=" µV" min="600000" reversed="false" step="12500" max="1400000"/>"' >> $XML
