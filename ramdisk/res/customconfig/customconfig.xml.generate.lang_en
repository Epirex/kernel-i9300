               action=\"cpugeneric /sys/devices/system/cpu/cpufreq/yankasusq/cpu_max_freq_stdby\">" >> $XML

cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_available_frequencies | \
tr ' ' '\n' | awk '{ print $1 }' | \
while read FREQTEMP; do
  if [ ! -z $FREQTEMP ]; then
    echo '<spinnerItem name="'$FREQTEMP' MHz" value="'${FREQTEMP}'"/>' | while read FREQ; do echo "$FREQ" | sed -e 's/000 MHz/ MHz/g' >> $XML; done
  fi
